<%- include("partials/header.ejs") %>
<%- include("partials/header-image.ejs", { titleHTML: "Share Your <br> Ideas And Stories!" }) %>
<section class="justify-center mt-5">
    <div>
        <form class="create-form" action="/create" method="POST" enctype="application/x-www-form-urlencoded">
            <h1>New Post</h1>
    
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" placeholder="Your Name" required>
            </div>
    
            <div class="form-group">
                <label for="thumbnail">Thumbnail URL</label>
                <input type="text" id="thumbnail" name="thumbnail" placeholder="Thumbnail Picture URL" required>
            </div>
    
            <div class="form-group full-width">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" placeholder="Post Title" required>
            </div>
    
            <div class="form-group full-width">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="6" placeholder="Write your post description here..."
                    required></textarea>
            </div>

            <div class="form-group full-width submit-button">
                <input type="submit" value="Post">
            </div>
        </form>
    </div>      
</section>
<%- include("partials/footer.ejs") %>